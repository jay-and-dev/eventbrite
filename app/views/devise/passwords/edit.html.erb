<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
<%= form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
<h1 class="h3 mb-3 font-weight-normal text-center">Changer mot de passe</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.label :password, "nouveau mot de passe" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmer nouveau mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="action mb-3 mt-2">
    <%= f.submit "Changer mon mot de passe" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
  </div>
</div>
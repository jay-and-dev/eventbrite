<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer l'événement pour la (ou les) raison(s) suivante(s) :</p>
    <% @event.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<div class="container">
  <div class="card mb-5 mt-5">
    <h5 class="card-header">Créer un nouvel événement</h5>
    <%= form_tag url_for(action: 'create'), multipart:true, method: "post" do %>
      <div class="form-group">
        <%= date_field_tag 'start_date', @event.start_date, value: Date.today, class: 'form-control', placeholder: 'date' %>
      </div>
      <div class="form-group">
        <%= number_field_tag 'duration', @event.duration, step: 5, min: 5, class: 'form-control', placeholder: 'durée' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'title', @event.title, minlength: 5, maxlength: 140, class: 'form-control', placeholder: 'titre' %>
      </div>

      <div class="form-group">
        <%= text_area_tag 'description', @event.description, minlength: 20, maxlength: 1000, class: 'form-control', placeholder: 'description' %>
      </div>

      <div class="form-group">
        <%= number_field_tag 'price', @event.price, min: 1, max: 1000, class: 'form-control', placeholder: 'prix' %>
      </div>

      <div class="form-group">
        <%= text_field_tag 'location', @event.location, class: 'form-control', placeholder: 'lieu de l\'événement' %>
      </div>

      <div class="form-group">
        <%= file_field_tag :avatar %>
      </div>  
      <%= submit_tag "Créer un événement", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
</div>
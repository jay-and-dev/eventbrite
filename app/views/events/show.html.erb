<div class="container text-center">
  <%if @event.avatar.attached?%>
    <%= image_tag @event.avatar, alt: 'avatar' %>
  <%else%>
    <p>=== Il n'y a pas encore d'image lié à cet événement ===</p>
  <%end%>
  <div class="card text-center mb-5 mt-5">
    <h5 class="card-header">Evénement numéro <%= @event.id %></h5>
    <div class="card-body">
      <h2 class="card-title mb-5">Date de début: <%= @event.start_date %></h2>
      <h3 class="card-text mb-5">Date de fin: <%= @event.end_date %></h3>
      <h3 class="card-text mb-5">Durée: <%= @event.duration %> minutes</h3>
      <h2 class="card-title mb-5">Titre: <%= @event.title %></h2>
      <h3 class="card-text mb-5">Description: <%= @event.description %></h3>
      <h3 class="card-text mb-5">Prix: <%= @event.price %> euros</h3>
      <h3 class="card-text mb-5">Lieu: <%= @event.location %></h3>
      <h3 class="card-text mb-5">Organisateur: <%= @event.admin.email %></h3>
      <h3>Participants (<%= @event.users.count %>)</h3>
      <p>
        <% if is_admin(@event) %>  
          <%= link_to "Mon espace événement", event_attendances_path(@event), class: "btn btn-warning" %>
        <% end %>  
        <% if !is_attendee(@event) %> 
          <%= link_to "Rejoindre l\'événement", new_event_attendance_path(@event.id), class: "btn btn-success" %>
        <% end %>
      </p>
    </div>
  </div> 
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>MyEventbrite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <!-- Bootstrap CSS -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
      <%= link_to "Accueil", root_path, class: "navbar-brand" %><br>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <% if user_signed_in? %>
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Créer un événement", new_event_path, class: "nav-link" %>
            </li>
            <% if true_admin? %>
            <li class="nav-item">
              <%= link_to "Dashboard administrateur", admin_root_path, class: "nav-link" %>
            </li>
            <% end %>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <%= link_to "Mon profil", nil, class: "nav-link dropdown-toggle", id: "navbarDropdownMenuLink", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } %> 
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to "Mon profil", user_path(current_user.id), class: "dropdown-item" %>
                <%= link_to "Se déconnecter", destroy_user_session_path, class: "dropdown-item", method: :delete %>
              </div>
            </li>
          </ul>
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <%= link_to "S'inscrire/ Se connecter", nil, class: "nav-link dropdown-toggle", id: "navbarDropdownMenuLink", data: { toggle: "dropdown" }, aria: { haspopup: "true", expanded: "false" } %> 
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to "S'inscrire", new_user_registration_path, class: "dropdown-item" %>
                <%= link_to "Se connecter", new_user_session_path, class: "dropdown-item" %>
              </div>
            </li>
          </ul>
        <% end %>  
      </div>   
    </nav>